{
  "name": "common-spectrum",
  "version": "0.31.0",
  "description": "Common package to deal with spectra",
  "main": "./lib/index.js",
  "module": "./lib-esm/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "lib-esm",
    "src"
  ],
  "scripts": {
    "build": "npm run tsc && cheminfo-build -r CommonSpectrum",
    "check-types": "tsc --noEmit",
    "clean": "rimraf lib lib-esm",
    "eslint": "eslint src --ext ts --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prepublishOnly": "npm run tsc",
    "test": "npm run test-coverage && npm run eslint && npm run check-types",
    "test-coverage": "npm run test-only -- --coverage",
    "test-only": "jest",
    "tsc": "npm run clean && npm run tsc-cjs && npm run tsc-esm",
    "tsc-cjs": "tsc --project tsconfig.cjs.json",
    "tsc-esm": "tsc --project tsconfig.esm.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/common-spectrum.git"
  },
  "keywords": [],
  "author": "Luc Patiny",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cheminfo/common-spectrum/issues"
  },
  "homepage": "https://github.com/cheminfo/common-spectrum#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@types/d3-scale": "^3.2.2",
    "@types/jest": "^26.0.22",
    "@types/js-quantities": "^1.6.2",
    "@types/react": "^17.0.3",
    "cheminfo-build": "^1.1.10",
    "eslint": "^7.24.0",
    "eslint-config-cheminfo-typescript": "^8.0.8",
    "jest": "^26.6.3",
    "jest-matcher-deep-close-to": "^2.0.1",
    "prettier": "^2.2.1",
    "react-plot": "^0.9.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "baselines": "^1.0.0",
    "convert-to-jcamp": "^4.2.0",
    "is-any-array": "^1.0.0",
    "jcampconverter": "^7.8.0",
    "js-quantities": "^1.7.6",
    "ml-array-max": "^1.2.3",
    "ml-array-min": "^1.2.2",
    "ml-array-normed": "^1.3.6",
    "ml-array-rescale": "^1.3.5",
    "ml-array-xy-equally-spaced": "^1.2.0",
    "ml-array-xy-filter-x": "^1.0.2",
    "ml-baseline-correction-regression": "^1.0.0",
    "ml-gsd": "^6.6.1",
    "ml-savitzky-golay": "^4.1.1",
    "ml-spectra-processing": "^5.9.0",
    "ml-stat": "^1.3.3"
  }
}
