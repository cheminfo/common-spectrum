{
  "name": "common-spectrum",
  "version": "3.0.1",
  "description": "Common package to deal with spectra",
  "type": "module",
  "exports": "./lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "npm run tsc && cheminfo-build --entry lib/index.js -r CommonSpectrum",
    "check-types": "tsc --noEmit",
    "clean": "rimraf lib lib-esm",
    "eslint": "eslint src",
    "eslint-fix": "npm run eslint -- --fix",
    "prepack": "npm run tsc",
    "prettier": "prettier --check src",
    "prettier-write": "prettier --write src",
    "test": "npm run test-coverage && npm run eslint && npm run prettier && npm run check-types",
    "test-coverage": "vitest run --coverage",
    "test-only": "vitest --run --coverage",
    "tsc": "npm run clean && npm run tsc-build",
    "tsc-build": "tsc --project tsconfig.build.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/common-spectrum.git"
  },
  "keywords": [],
  "author": "Luc Patiny",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cheminfo/common-spectrum/issues"
  },
  "homepage": "https://github.com/cheminfo/common-spectrum#readme",
  "devDependencies": {
    "@types/d3-scale": "^4.0.9",
    "@types/js-quantities": "^1.6.6",
    "@types/node": "^24.2.1",
    "@zakodium/tsconfig": "^1.0.2",
    "cheminfo-build": "^1.2.1",
    "cheminfo-types": "^1.8.1",
    "eslint": "^9.33.0",
    "eslint-config-cheminfo-typescript": "^19.0.0",
    "jest-matcher-deep-close-to": "^3.0.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/react": "^18.3.12",
    "@vitest/coverage-v8": "^3.2.4",
    "baselines": "^1.1.9",
    "convert-to-jcamp": "^6.0.0",
    "is-any-array": "^2.0.1",
    "jcampconverter": "^11.0.4",
    "js-quantities": "^1.8.0",
    "ml-array-normed": "^1.3.7",
    "ml-array-rescale": "^1.3.7",
    "ml-array-xy-equally-spaced": "^1.2.1",
    "ml-array-xy-filter-x": "^1.0.2",
    "ml-gsd": "^13.0.1",
    "ml-peak-shape-generator": "^4.2.0",
    "ml-savitzky-golay": "^5.0.0",
    "ml-signal-processing": "^2.0.0",
    "ml-spectra-fitting": "^5.0.1",
    "ml-spectra-processing": "^14.15.0",
    "react-plot": "^0.10.1",
    "vitest": "^3.2.4",
    "xy-parser": "^5.0.5"
  }
}
