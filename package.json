{
  "name": "common-spectrum",
  "version": "2.2.0",
  "description": "Common package to deal with spectra",
  "main": "./lib/index.js",
  "module": "./lib-esm/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "lib-esm",
    "src"
  ],
  "scripts": {
    "build": "npm run tsc && cheminfo-build -r CommonSpectrum",
    "check-types": "tsc --noEmit",
    "clean": "rimraf lib lib-esm",
    "eslint": "eslint src --ext ts --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prepack": "npm run tsc",
    "prettier": "prettier --check src",
    "prettier-write": "prettier --write src",
    "test": "npm run test-coverage && npm run eslint && npm run check-types",
    "test-coverage": "jest --coverage",
    "test-only": "jest",
    "tsc": "npm run clean && npm run tsc-cjs && npm run tsc-esm",
    "tsc-cjs": "tsc --project tsconfig.cjs.json",
    "tsc-esm": "tsc --project tsconfig.esm.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/common-spectrum.git"
  },
  "keywords": [],
  "author": "Luc Patiny",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cheminfo/common-spectrum/issues"
  },
  "homepage": "https://github.com/cheminfo/common-spectrum#readme",
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@types/d3-scale": "^4.0.2",
    "@types/jest": "^28.1.2",
    "@types/js-quantities": "^1.6.3",
    "cheminfo-build": "^1.1.11",
    "eslint": "^8.18.0",
    "eslint-config-cheminfo-typescript": "^11.0.1",
    "jest": "^28.1.1",
    "jest-matcher-deep-close-to": "^3.0.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@types/react": "^18.0.14",
    "baselines": "^1.1.1",
    "cheminfo-types": "^1.1.0",
    "convert-to-jcamp": "^5.2.0",
    "is-any-array": "^2.0.0",
    "jcampconverter": "^9.0.1",
    "js-quantities": "^1.7.6",
    "ml-array-normed": "^1.3.7",
    "ml-array-rescale": "^1.3.7",
    "ml-array-xy-equally-spaced": "^1.2.1",
    "ml-array-xy-filter-x": "^1.0.2",
    "ml-gsd": "^11.2.1",
    "ml-peak-shape-generator": "^4.1.1",
    "ml-savitzky-golay": "^5.0.0",
    "ml-signal-processing": "^0.5.2",
    "ml-spectra-fitting": "^4.0.2",
    "ml-spectra-processing": "^11.7.0",
    "react-plot": "0.10.1",
    "xy-parser": "^5.0.2"
  }
}
